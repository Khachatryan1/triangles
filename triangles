#include <iostream>

int main()
{
    
    int i = 0;
    while (i < 8) 
    {
    int j = 0;
        i++;
        while (j < 10)
        {
            j++;
            if ((j < 10 - i) || (j > i))
               std::cout << ' ';
            else
                std::cout << '*';
        }
        std::cout << '\n';
    }
        
    return 0;

}
